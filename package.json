{
  "name": "devlint",
  "description": "A meta-linter to verify configuration files, projects structure and git repositories.",
  "version": "0.1.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/devlint.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/devlint/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/devlint#readme",
  "main": "./build/index.min.js",
  "bin": {
    "devlint": "build/bin/devlint.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "upload:coverage": "coveralls < .coverage/lcov.info"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "plugins": [
      "tsdoc"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cosmiconfig": "^7.0.0",
    "jsonast": "^0.2.1",
    "v8-compile-cache": "^2.2.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.0.3",
    "@microsoft/tsdoc": "^0.12.24",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "eslint": "^7.17.0",
    "eslint-plugin-tsdoc": "^0.2.10",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3",
    "vitepress": "^0.10.5"
  }
}
