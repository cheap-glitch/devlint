{
  "name": "devlint",
  "version": "0.3.0",
  "description": "A meta-linter for configuration files, directory structures and git repositories.",
  "license": "ISC",
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "repository": "cheap-glitch/devlint",
  "homepage": "https://github.com/cheap-glitch/devlint#readme",
  "bugs": "https://github.com/cheap-glitch/devlint/issues",
  "funding": "https://github.com/sponsors/cheap-glitch",
  "keywords": [
    "check",
    "config",
    "configuration",
    "directories",
    "folders",
    "json",
    "lint",
    "linter",
    "projects",
    "tree",
    "yaml"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/bin/devlint.js",
  "files": [
    "dist",
    "src/configs/*.json"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "empty-dir dist && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "npm test -- --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "docs:build": "vitepress build docs",
    "docs:parse": "ts-node-dev --respawn --exit-child --rs docs/parse.ts",
    "docs:serve": "vitepress serve docs",
    "docs:watch": "run-p --print-name --race docs:parse docs:serve",
    "lint": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "max-params": "off"
    },
    "overrides": [
      {
        "files": [
          "src/index.ts"
        ],
        "rules": {
          "multiline-comment-style": "off"
        }
      },
      {
        "files": [
          "test/lib/*.ts",
          "test/helpers/*.ts"
        ],
        "rules": {
          "unicorn/no-null": "off"
        }
      },
      {
        "files": [
          "test/rules/index.test.ts"
        ],
        "rules": {
          "jest/valid-title": "off"
        }
      },
      {
        "files": [
          "test/rules/snippets/*.js",
          "test/rules/snippets/templates/*.js"
        ],
        "rules": {
          "unicorn/no-null": "off",
          "array-bracket-newline": "off",
          "array-element-newline": "off",
          "object-property-newline": "off",
          "capitalized-comments": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/lib/**/*.ts",
      "!src/lib/rules/*.ts",
      "dist/src/lib/rules/*.js"
    ]
  },
  "git-grapnel": {
    "commitMessageFormat": "conventional-commits",
    "addEmojis": true
  },
  "dependencies": {
    "@cheap-glitch/eslint-config": "^3.2.2",
    "cliquish": "file:../cliquish",
    "colorette": "^2.0.16",
    "jsonast": "^0.2.1",
    "mazeru": "^2.0.0",
    "mem": "^8.1.1",
    "strip-json-comments": "^3.1.1",
    "tiny-glob": "^0.2.9",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^2.3.0",
    "@cheap-glitch/tsconfig": "^1.0.0",
    "@microsoft/tsdoc": "^0.13.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "empty-dir-cli": "^1.0.2",
    "eslint": "^8.10.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^1.1.8",
    "type-fest": "^2.12.0",
    "typescript": "^4.6.2",
    "vitepress": "^0.22.3"
  }
}
