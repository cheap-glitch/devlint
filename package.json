{
  "name": "devlint",
  "version": "0.3.0",
  "description": "A meta-linter for configuration files, directory structures and git repositories.",
  "license": "ISC",
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "repository": "cheap-glitch/devlint",
  "homepage": "https://github.com/cheap-glitch/devlint#readme",
  "bugs": "https://github.com/cheap-glitch/devlint/issues",
  "funding": "https://github.com/sponsors/cheap-glitch",
  "keywords": [
    "check",
    "config",
    "configuration",
    "directories",
    "folders",
    "json",
    "lint",
    "linter",
    "projects",
    "tree",
    "yaml"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/bin/devlint.js",
  "files": [
    "build",
    "!build/scripts",
    "configs/*.json"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "npm test -- --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "prepublishOnly": "npm run test && npm run build:clean",
    "test": "jest --runInBand",
    "test:install": "npm run build:clean && sudo npm uninstall -g devlint && sudo npm link",
    "test:watch": "npm test -- --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "plugins": [
      "tsdoc"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "test/lib/*.ts",
          "test/helpers/*.ts"
        ],
        "rules": {
          "unicorn/no-null": "off"
        }
      },
      {
        "files": [
          "test/rules/snippets/*.js",
          "test/rules/snippets/templates/*.js"
        ],
        "rules": {
          "capitalized-comments": "off",
          "unicorn/no-null": "off"
        }
      }
    ],
    "ignorePatterns": [
      "build"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "src/lib/**/*.ts",
      "!src/lib/rules/*.ts",
      "build/src/lib/rules/*.js"
    ]
  },
  "dependencies": {
    "cliquish": "^0.8.2",
    "colorette": "^1.2.2",
    "jsonast": "^0.2.1",
    "mazeru": "^2.0.0",
    "mem": "^8.1.1",
    "strip-json-comments": "^3.1.1",
    "tiny-glob": "^0.2.9",
    "v8-compile-cache": "^2.3.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@cheap-glitch/tsconfig": "^1.0.0",
    "@microsoft/tsdoc": "^0.13.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.1",
    "@types/yargs": "^16.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "type-fest": "^1.1.3",
    "typescript": "^4.2.4",
    "vitepress": "^0.13.2"
  }
}
