{
  "include": [
    "bin/devlint.ts",
    "scripts/*.ts",
    "src/*.ts",
    "src/lib/rules/*.ts"
  ],

  "compilerOptions": {
    "module":                     "commonjs",
    "target":                     "es2018",

    "outDir":                     "build",
    "declaration":                true,
		"noEmitOnError":              true,
    "removeComments":             true,

    "lib":                        ["es2020"],
    "moduleResolution":           "node",
    "esModuleInterop":            true,
    "resolveJsonModule":          true,

    "strict":                     true,
    "downlevelIteration":         true,
		"noFallthroughCasesInSwitch": true,
    "noImplicitAny":              true,
    "noImplicitReturns":          true,
    "noImplicitThis":             true,
    "noUnusedLocals":             true,
		"noUnusedParameters":         true
  }
}
